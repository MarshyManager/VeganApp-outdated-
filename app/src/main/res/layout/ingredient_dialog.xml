<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/hide_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="@string/hide"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hide_dialog"
        app:queryHint="Find ingredient..." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ingredients_search_adapter"
        android:name="com.example.veganapp.RecipeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_ingredients"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp" />

</RelativeLayout>